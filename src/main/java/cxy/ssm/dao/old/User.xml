<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="traditional">
    <select id="findOne" resultType="cxy.ssm.model.User" parameterType="java.lang.Integer">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>
</mapper>